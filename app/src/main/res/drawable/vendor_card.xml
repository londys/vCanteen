<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/listview_background_shape" >

<!-- "shadow" -->
<item>
    <shape android:shape="rectangle" >
        <solid android:color="#000000"/>
        <corners android:radius="11dp" />
        <gradient
            android:startColor="#eaeaea"
            android:centerColor="#eaeaea"
            android:endColor="#eaeaea"
            android:angle="90"/>
    </shape>
</item>


<item android:bottom="3dp" android:right="2dp">
    <shape android:shape="rectangle">
        <solid android:color="#fffafafa"/>
        <stroke android:width="1dp" android:color="@color/primaryLight" />
        <corners android:radius="10dp" />
    </shape>
</item>

</layer-list>